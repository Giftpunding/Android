<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.amar.library.ui.StickyScrollView
        android:id="@+id/ly_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:stickyHeader="@id/content_gift_appbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_home_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <include
                android:id="@+id/content_gift_appbar"
                layout="@layout/content_gift_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edit_search_gift"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_dimens"
                android:layout_marginEnd="@dimen/activity_horizontal_dimens"
                android:background="@drawable/bg_rect_midnight_express_tranparent_radius10_stroke1"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:hint="@string/content_home_search_hint"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:paddingVertical="14dp"
                android:paddingStart="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/content_gift_appbar" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp2_home_banner"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:background="@color/black_trans_40"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_search_gift" />

            <TextView
                android:id="@+id/tv_banner_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_dimens"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_rect_transparent_black_trans_40_radius999_stroke0"
                android:fontFamily="@font/pretendard_medium"
                android:includeFontPadding="false"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:text="1 / 3"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/vp2_home_banner"
                app:layout_constraintEnd_toEndOf="@id/vp2_home_banner" />

            <TextView
                android:id="@+id/tv_main_category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_dimens"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="@string/title_home_main_category"
                android:textColor="@color/midnight_express"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vp2_home_banner" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_main_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_dimens"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="13dp"
                android:overScrollMode="never"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_main_category_title" />

            <TextView
                android:id="@+id/tv_another_people_selected_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_dimens"
                android:layout_marginTop="66dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="@string/title_home_most_selected_gift"
                android:textColor="@color/midnight_express"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rcv_main_category" />

            <HorizontalScrollView
                android:id="@+id/sv_all_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_dimens"
                android:layout_marginTop="16dp"
                android:paddingVertical="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_another_people_selected_gift">

                <RadioGroup
                    android:id="@+id/rg_all_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/activity_horizontal_dimens"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/r_btn_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_sc_oval_tranparent_tomato_radius_999_stroke_0_oval_hawkes_blue_tranparent_radius_999_stroke0"
                        android:button="@null"
                        android:checked="true"
                        android:fontFamily="@font/pretendard_medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:minHeight="0dp"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="9dp"
                        android:text="@string/category_all"
                        android:textColor="@drawable/sc_color_solitude_2_color_raven"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/r_btn_beauty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_sc_oval_tranparent_tomato_radius_999_stroke_0_oval_hawkes_blue_tranparent_radius_999_stroke0"
                        android:button="@null"
                        android:fontFamily="@font/pretendard_medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:minHeight="0dp"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="9dp"
                        android:text="@string/category_all"
                        android:textColor="@drawable/sc_color_solitude_2_color_raven"
                        android:textSize="14sp" />


                    <RadioButton
                        android:id="@+id/r_btn_digital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_sc_oval_tranparent_tomato_radius_999_stroke_0_oval_hawkes_blue_tranparent_radius_999_stroke0"
                        android:button="@null"
                        android:fontFamily="@font/pretendard_medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:minHeight="0dp"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="9dp"
                        android:text="@string/category_all"
                        android:textColor="@drawable/sc_color_solitude_2_color_raven"
                        android:textSize="14sp" />
                </RadioGroup>
            </HorizontalScrollView>

            <View
                android:id="@+id/div_slider_top"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/solitude_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sv_all_category" />

            <TextView
                android:id="@+id/tv_slider_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/pretendard_medium"
                tools:text="test"
                android:textColor="@color/tomato"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/slider_price_range"
                app:layout_constraintStart_toStartOf="@id/slider_price_range"
                app:layout_constraintTop_toBottomOf="@id/sv_all_category" />


            <com.google.android.material.slider.RangeSlider
                android:id="@+id/slider_price_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_dimens"
                android:layout_marginEnd="@dimen/activity_horizontal_dimens"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_slider_price" />


            <View
                android:id="@+id/div_slider_bottom"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/solitude_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/slider_price_range" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_another_people_selected_gift_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_dimens"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="@dimen/activity_horizontal_dimens"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/div_slider_bottom" />

            <TextView
                android:id="@+id/tv_ranking_more_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:background="@drawable/bg_rect_hawkes_blue_trans100_radius8_stroke1"
                android:drawablePadding="5dp"
                android:fontFamily="@font/pretendard_medium"
                android:includeFontPadding="false"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                tools:text="랭킹 더보기"
                android:textColor="@color/echo_blue_2"
                android:textSize="14sp"
                app:drawableEndCompat="@drawable/ic_arrow_more_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rcv_another_people_selected_gift_list" />

            <TextView
                android:id="@+id/tv_luxury_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_dimens"
                android:layout_marginTop="66dp"
                android:fontFamily="@font/pretendard_bold"
                android:includeFontPadding="false"
                android:text="@string/title_home_luxury_gift"
                android:textColor="@color/midnight_express"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_ranking_more_info" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_luxury_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_dimens"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="16dp"
                android:clipToPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_luxury_title" />


            <TextView
                android:id="@+id/tv_luxury_more_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:background="@drawable/bg_rect_hawkes_blue_trans100_radius8_stroke1"
                android:drawablePadding="5dp"
                android:fontFamily="@font/pretendard_medium"
                android:includeFontPadding="false"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                tools:text="랭킹 더보기"
                android:textColor="@color/echo_blue_2"
                android:textSize="14sp"
                app:drawableEndCompat="@drawable/ic_arrow_more_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rcv_luxury_list" />

            <TextView
                android:id="@+id/tv_more_gift_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_dimens"
                android:layout_marginTop="44dp"
                android:fontFamily="@font/pretendard_bold"
                android:includeFontPadding="false"
                android:text="@string/title_home_more_gift"
                android:textColor="@color/midnight_express"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_luxury_more_info" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_more_gift_category_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_dimens"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_oval_link_water_white_radius999_stroke1"
                android:padding="6dp"
                android:src="@drawable/ic_refresh"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_more_gift_title" />

            <RadioGroup
                android:id="@+id/rg_more_gift_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/btn_more_gift_category_refresh"
                app:layout_constraintStart_toEndOf="@id/btn_more_gift_category_refresh"
                app:layout_constraintTop_toTopOf="@id/btn_more_gift_category_refresh">

                <RadioButton
                    android:id="@+id/r_btn_first_more_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_sc_oval_tranparent_tomato_radius_999_stroke_0_oval_hawkes_blue_tranparent_radius_999_stroke0"
                    android:button="@null"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:minHeight="0dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="9dp"
                    android:text="@string/category_all"
                    android:textColor="@drawable/sc_color_solitude_2_color_raven"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r_btn_second_more_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_sc_oval_tranparent_tomato_radius_999_stroke_0_oval_hawkes_blue_tranparent_radius_999_stroke0"
                    android:button="@null"
                    android:checked="true"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:minHeight="0dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="9dp"
                    android:text="@string/category_all"
                    android:textColor="@drawable/sc_color_solitude_2_color_raven"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r_btn_third_more_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_sc_oval_tranparent_tomato_radius_999_stroke_0_oval_hawkes_blue_tranparent_radius_999_stroke0"
                    android:button="@null"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:minHeight="0dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="9dp"
                    android:text="@string/category_all"
                    android:textColor="@drawable/sc_color_solitude_2_color_raven"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r_btn_forth_more_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_sc_oval_tranparent_tomato_radius_999_stroke_0_oval_hawkes_blue_tranparent_radius_999_stroke0"
                    android:button="@null"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:minHeight="0dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="9dp"
                    android:text="@string/category_all"
                    android:textColor="@drawable/sc_color_solitude_2_color_raven"
                    android:textSize="14sp" />
            </RadioGroup>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_more_gift_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_dimens"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_more_gift_category_refresh" />

            <TextView
                android:id="@+id/tv_more_gift_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:background="@drawable/bg_rect_hawkes_blue_trans100_radius8_stroke1"
                android:drawablePadding="5dp"
                android:fontFamily="@font/pretendard_medium"
                android:includeFontPadding="false"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                tools:text="랭킹 더보기"
                android:textColor="@color/echo_blue_2"
                android:textSize="14sp"
                app:drawableEndCompat="@drawable/ic_arrow_more_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rcv_more_gift_list" />

            <TextView
                android:id="@+id/tv_most_searched_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_dimens"
                android:layout_marginTop="66dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/title_home_most_searched_gift"
                android:textColor="@color/midnight_express"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_more_gift_info" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_most_searched_gift_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_dimens"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_most_searched_gift" />

            <LinearLayout
                android:id="@+id/ly_main_footer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:background="@color/solitude_2"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rcv_most_searched_gift_list">

                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_dimens"
                    android:layout_marginTop="33dp"
                    android:fontFamily="@font/pretendard_medium"
                    tools:text="회사 이름"
                    android:textColor="@color/raven" />

                <TextView
                    android:id="@+id/tv_company_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_dimens"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="70dp"
                    android:fontFamily="@font/pretendard_medium"
                    tools:text="테스트1 | \n테스트2 | \n테스트3"
                    android:textColor="@color/echo_blue_2"
                    android:textSize="12sp" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.amar.library.ui.StickyScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_top_scroll"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="34dp"
        android:backgroundTint="@color/white"
        app:backgroundTint="@color/link_water"
        android:src="@drawable/ic_arrow_top_scroll"
        app:elevation="0dp"
        app:borderWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

