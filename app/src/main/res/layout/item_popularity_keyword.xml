<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_popularity_keyword"
        style="@style/noto_sans_kr_regular_14_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인기검색어"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/v_popularity_divider"/>

    <View
        android:id="@+id/v_popularity_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="@color/silver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_popularity_keyword"
        app:layout_constraintStart_toStartOf="@+id/tv_popularity_keyword"
        app:layout_constraintTop_toBottomOf="@+id/tv_popularity_keyword" />

</androidx.constraintlayout.widget.ConstraintLayout>