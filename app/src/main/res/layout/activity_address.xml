<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.address.AddressActivity">

    <include
        android:id="@+id/tb_address"
        layout="@layout/content_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_address_content"
        style="@style/noto_sans_kr_medium_20_black_padding0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="39dp"
        android:includeFontPadding="false"
        android:text="@string/content_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_address" />

    <TextView
        android:id="@+id/btn_address_search"
        style="@style/noto_sans_kr_medium_16_link_water_padding0"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="73dp"
        android:background="@drawable/bg_rect_trans100_solitude2_radius16"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingStart="18dp"
        android:text="@string/content_input"
        app:drawableStartCompat="@drawable/ic_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_address_content" />

    <TextView
        android:id="@+id/btn_address_confirm"
        style="@style/noto_sans_kr_medium_16_white_padding0"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="28dp"
        android:layout_marginBottom="61dp"
        android:background="@drawable/bg_sc_rect_trans100_echo_blue2_radius4_rect_trans100_midnight_express_radius4"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/content_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>