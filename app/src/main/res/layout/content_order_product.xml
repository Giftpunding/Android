<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_order_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/sp_color">

            <ImageView
                android:id="@+id/iv_order_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cl_order_product_description"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_order_product_description"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHorizontal_weight="2.15"
                app:layout_constraintStart_toEndOf="@+id/iv_order_product"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tv_order_product_brand_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="브랜드 명 입력 영역 입니다."
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                </TextView>

                <TextView
                    android:id="@+id/tv_order_product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="상품 명 입력하는 영역 입니다."
                    android:lines="2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_order_product_brand_name"
                    app:layout_constraintStart_toStartOf="@+id/tv_order_product_brand_name"
                    app:layout_constraintEnd_toEndOf="parent">
                </TextView>

                <TextView
                    android:id="@+id/tv_order_product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="36,000"
                    app:layout_constraintStart_toStartOf="@+id/tv_order_product_brand_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_order_product_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Spinner
            android:id="@+id/sp_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            app:layout_constraintStart_toStartOf="@+id/cl_order_product"
            app:layout_constraintEnd_toEndOf="@+id/cl_order_product"
            app:layout_constraintBottom_toTopOf="@+id/btn_put_product">
        </Spinner>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_put_product"
            style="@style/noto_sans_kr_medium_16_white_padding0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="28dp"
            android:text="@string/content_put_gift"
            app:layout_constraintStart_toStartOf="@+id/cl_order_product"
            app:layout_constraintEnd_toEndOf="@+id/cl_order_product"
            app:layout_constraintBottom_toBottomOf="parent">

        </androidx.appcompat.widget.AppCompatButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
