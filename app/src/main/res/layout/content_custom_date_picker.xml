<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/bg_rect_trans100_solitude2_radius12_stroke0"
        app:layout_constraintBottom_toBottomOf="@id/np_month"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/np_month" />

    <NumberPicker
        android:id="@+id/np_month"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:selectionDividerHeight="0dp"
        android:theme="@style/np_custom_date_picker_style"
        app:layout_constraintEnd_toStartOf="@id/np_day_of_month"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_month"
        style="@style/noto_sans_kr_medium_16_midnight_express_padding0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_month"
        app:layout_constraintBottom_toBottomOf="@id/np_month"
        app:layout_constraintEnd_toEndOf="@id/np_month"
        app:layout_constraintTop_toTopOf="@id/np_month" />

    <NumberPicker
        android:id="@+id/np_day_of_month"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:selectionDividerHeight="0dp"
        android:theme="@style/np_custom_date_picker_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/np_month"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_day_of_month"
        style="@style/noto_sans_kr_medium_16_midnight_express_padding0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_day_of_month"
        app:layout_constraintBottom_toBottomOf="@id/np_day_of_month"
        app:layout_constraintEnd_toEndOf="@id/np_day_of_month"
        app:layout_constraintTop_toTopOf="@id/np_day_of_month" />

</androidx.constraintlayout.widget.ConstraintLayout>