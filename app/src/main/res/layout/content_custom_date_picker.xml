<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="319dp"
    android:layout_height="175dp">

    <View
        android:layout_width="319dp"
        android:layout_height="47dp"
        android:background="@drawable/bg_rect_trans100_solitude2_radius12_stroke0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/np_month"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:selectionDividerHeight="0dp"
        android:theme="@style/np_custom_date_picker_style"
        app:layout_constraintEnd_toStartOf="@id/np_day_of_month"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/np_day_of_month"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:selectionDividerHeight="0dp"
        android:theme="@style/np_custom_date_picker_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/np_month"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>